@model CustomerDTO //binding with  model

@{
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Add Customer</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone No</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>



            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Province</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Province">
                        <option value="">--Select Province--</option>
                       
                    </select>
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
            </div> 

          



            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">District</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="District" id="District">
                        <option value="">--Select District--</option>
                    </select>
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Municipality/VDC</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Municipality" id="Municipality">
                        <option value="">--Select Municipality--</option>
                    </select>
                    <span asp-validation-for="Municipality" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Ward No</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="WardNo" />
                    <span asp-validation-for="WardNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Customer" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Customer.js"></script>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
